{
  "name": "netlab",
  "version": "0.0.1",
  "dependencies": {
    "express": "~4.4.5",
    "request": "~2.21.0",
    "socket.io": "~1.0.0",
    "underscore": "~1.4.4",
    "johnny-five": "~0.7.49"
  },
  "devDependencies": {
    "matchdep": "~0.1.2",
    "uglify-js": "~2.4.16",
    "gaze": "~0.6.4"
  },
  "engines": {
    "node": ">=0.8.0"
  },
  "scripts": {
    "start": "node server/netlabServer.js",
